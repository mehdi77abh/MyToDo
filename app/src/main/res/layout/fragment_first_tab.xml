<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FirstFragment.FirstTabFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_first_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_task"
       />/ android:layoutAnimation="@anim/recyclerview_layout_animation"
        />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_add_new_task_main"
        android:layout_width="wrap_content"
        android:text="اضافه کردن"
        android:backgroundTint="@color/blue"
        app:icon="@drawable/ic_baseline_add_24"
        app:iconGravity="textEnd"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_gravity="bottom|center" />



</FrameLayout>